<!DOCTYPE html>
<html>
  <head>
    <title>Lb8App</title>
    <style type="text/css">
      div {
        width: 300px
      }
    </style>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% flash.each do |name, msg| %>
      <div class='alert alert-<%= name %> scale'>
        <%= msg %>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
